RewriteEngine On

RewriteCond %{REQUEST_METHOD} ^GET$
RewriteRule ^smartphones$ controllers/people.php?action=index

RewriteCond %{REQUEST_METHOD} ^POST$
RewriteRule ^smartphones$ controllers/people.php?action=create

RewriteCond %{REQUEST_METHOD} ^PUT$
RewriteRule ^smartphones/([0-9]+)$ controllers/people.php?action=update&id=$1

RewriteCond %{REQUEST_METHOD} ^DELETE$
RewriteRule ^smartphones/([0-9]+)$ controllers/people.php?action=delete&id=$1
